<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gucci1"
    tools:context=".Signin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:padding="50dp"
        android:paddingTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="MY GUCCI ACCOUNT"
        android:fontFamily="@font/arsenal"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/editsignin"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/taikhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/editnhap"
                android:drawableStart="@drawable/baseline_person_24"
                android:drawablePadding="30dp"
                android:padding="20dp" />

            <EditText
                android:id="@+id/matkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/editnhap"
                android:drawableStart="@drawable/baseline_lock_person_24"
                android:drawablePadding="30dp"
                android:padding="20dp" />

            <Button
                android:id="@+id/signintc"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/arsenal"
                android:text="SIGN IN"
                android:textColor="@color/white"
                android:textSize="23sp" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arsenal"
                android:text="You forgot your password?"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


